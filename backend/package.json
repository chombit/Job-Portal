{
  "name": "job-portal-backend",
  "version": "1.0.0",
  "description": "Backend for Job Portal Application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "npm run migrate && node server.js",
    "dev": "nodemon server.js",
    "migrate": "npx sequelize-cli db:migrate --url \"$DATABASE_URL\"",
    "migrate:undo": "npx sequelize-cli db:migrate:undo --url \"$DATABASE_URL\"",
    "migrate:status": "npx sequelize-cli db:migrate:status --url \"$DATABASE_URL\"",
    "seed": "npx sequelize-cli db:seed:all --url \"$DATABASE_URL\"",
    "build": "echo 'No build step required'",
    "lint": "eslint . --ext .js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.3.0",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.11.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.31.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
